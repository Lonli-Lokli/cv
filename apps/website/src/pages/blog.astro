---
import Layout from '../layouts/BaseLayout.astro';
import { Blogs } from '@lonli-lokli/common';

const title = 'Blog';
const description =
  'My blog with articles about web development and programming in general.';

const posts = (await Astro.glob('../blog-posts/*.mdx')).sort(
  (a, b) =>
    new Date(b.frontmatter.date).valueOf() -
    new Date(a.frontmatter.date).valueOf()
);
---

<Layout
  title={title}
>
  <Blogs description={description} posts={posts} />
</Layout>